{
  "compilerOptions": {
    // https://dev.to/kkazala/jest-errors-1in7
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals" : true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "ES2017", "WebWorker"],
    "module": "esNext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": [
    "**/*.tsx",
  ],
  "exclude": []
}
